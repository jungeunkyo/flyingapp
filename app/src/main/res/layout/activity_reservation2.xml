<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationActivity2">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/flyingLogo1"
                    android:layout_width="277dp"
                    android:layout_height="143dp"
                    app:srcCompat="@drawable/flying_logo" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp"
                    android:text="flying의 다양한 서비스와 혜택을 누리세요." />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="블루 스터디카페 영등포점"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="35dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. 좌석을 선택해주세요."
                        android:textSize="15sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        app:srcCompat="@drawable/select_seat"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="선택된 좌석 : 19  "
                        android:textSize="15sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. 이용시간을 선택해주세요."
                        android:textSize="15sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"/>

                    <RadioGroup
                        android:id="@+id/use_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                        <RadioButton
                            android:id="@+id/two_hour"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="3시간"
                            android:textSize="13sp"
                            android:tag="3000"/>

                        <RadioButton
                            android:id="@+id/four_hour"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="4시간"
                            android:textSize="13sp"
                            android:tag="4000"/>

                        <RadioButton
                            android:id="@+id/six_hour"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="6시간"
                            android:textSize="13sp"
                            android:tag="5000"/>

                        <RadioButton
                            android:id="@+id/ten_hour"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="8시간"
                            android:textSize="13sp"
                            android:tag="8000"/>



                    </RadioGroup>


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/beforeBtn"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_custom2"
                    android:text="이전"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/pay_Btn"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_custom"
                    android:text="결제하기"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>